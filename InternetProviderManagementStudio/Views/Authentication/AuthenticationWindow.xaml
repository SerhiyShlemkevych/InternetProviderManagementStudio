<Window x:Class="InternetProviderManagementStudio.Views.Authentication.AuthenticationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:InternetProviderManagementStudio.Views.Authentication"
        mc:Ignorable="d"
        Title="AuthenticationWindow" Height="300" Width="157">
    <Grid>
        <Label  Content="Password" HorizontalAlignment="Left" Margin="10,73,0,0" VerticalAlignment="Top"/>
        <Label  Content="Login" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox  HorizontalAlignment="Left" Height="23" Margin="10,38,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="130"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Height="23" Width="129"/>
        <Button Content="Sign in" Command="{Binding SignInCommand}" CommandParameter="{Binding ElementName=passwordBox}" HorizontalAlignment="Left" Margin="10,156,0,0" VerticalAlignment="Top" Width="130"/>

    </Grid>
</Window>
